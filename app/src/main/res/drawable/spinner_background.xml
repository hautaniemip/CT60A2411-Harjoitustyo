<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/dark_grey" android:startColor="@color/dark_grey" android:type="linear" />
                    <corners android:radius="7dp" />
