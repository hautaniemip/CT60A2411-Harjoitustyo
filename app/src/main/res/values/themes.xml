<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CT60A2411Harjoitustyo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="android:textColorHint">@color/yellow</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="FontSmall">
        <item name="android:textSize">12sp</item>
        <item name="title">@style/TitleSmall</item>
    </style>

    <style name="FontNormal">
        <item name="android:textSize">16sp</item>
        <item name="title">@style/TitleNormal</item>
    </style>

    <style name="FontLarge">
        <item name="android:textSize">24sp</item>
        <item name="title">@style/TitleLarge</item>
    </style>

    <style name="TitleSmall">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleNormal">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textSize">32sp</item>
    </style>
</resources>